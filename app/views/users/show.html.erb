<h1>Wineaholics be checkin' out your profile ;)</h1>
<div class="profile_box animated bounceInLeft">
  <p class="user_name"><%= @user.full_name %></p>
  <div>
    <img src="<%= @user.picture_url %>">
  </div>
  <h3>Bio:</h3>
  <p style = "white-space:PRE"><%= @user.bio %></p>
  <h3>Email:</h3>
  <p><%= @user.email %></p>
  <% if @user == current_user %>
    <%= link_to 'Edit Profile', edit_user_path(current_user) %>
  <% end %>
</div>

<h2>Posts</h2>
<% @posts.each do |post| %>
  <div class="user_post">
    <p class="post_content"> <%= post.content %> </p>
    <p class="post_time"> <%= post.created_at.to_formatted_s(:long) %> </p>
  </div>
<% end %>
